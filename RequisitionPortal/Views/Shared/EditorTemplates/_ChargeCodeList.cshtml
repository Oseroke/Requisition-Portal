@(Html.Kendo().DropDownListFor(m => m)
        .DataValueField("Id")
        .DataTextField("Code")
                .BindTo((System.Collections.IEnumerable)ViewData["ChargeCodes"])
                    .Animation(mp =>
                    {
                        mp.Open(x => { x.Zoom(ZoomDirection.In); });
                        mp.Close(x => { x.Zoom(ZoomDirection.Out); });
                    })
)

